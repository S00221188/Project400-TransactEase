<Window x:Class="Project400_TransactEase.SalesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project400_TransactEase"
        mc:Ignorable="d"
        Title="SalesWindow" Height="720" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Sales History window (To be designed after functionallity)" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Filter sales by date" FontSize="15" FontWeight="Bold" Margin="0,0,0,0"/>
            <!--Filtering By Date (Implementation of by Employee Later Date)-->
            <TextBlock Text="Start Date" FontSize="12" FontWeight="Bold" Margin="0,0,0,0"/>
            <DatePicker Name="StartDate_Filter" Margin="0,5"/>
            <TextBlock Text="End Date" FontSize="12" FontWeight="Bold" Margin="0,0,0,0"/>
            <DatePicker Name="EndDate_Filter" Margin="0,0"/>
            <!-- Function Buttons -->
            <UniformGrid Grid.Row="1" Columns="2" Rows="1" Margin="0,10,0,0">
                <Button Content="Back" Height="30" Width="100" Margin="0,5" Click="Back_Click"/>
                <Button Content="Filter" Height="30" Width="100" Margin="0,5" Click="Filter_Click"/>
            </UniformGrid>
            <!--Filtered Sales History-->
            <TextBlock Text="Sales" FontSize="12" FontWeight="Bold" Margin="0,0,0,0"/>
            <ListBox Name="SalesList" Height="100" Background="White" Margin="0,10"/>
            <!--Sale Breakdown to be implemented below-->
        </StackPanel>
    </Grid>
</Window>
