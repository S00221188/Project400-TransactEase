<Window x:Class="Project400_TransactEase.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project400_TransactEase"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="720" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Settings (To be designed after functionallity)" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="View Sales History" Click="SalesHistory_Click" Height="40" Margin="0,5"/>
            <Button Content="End of Day Reading (To be moved to a Manager Actions Window)" Click="EndOfDay_Click" Height="40" Margin="0,5"/>
            <Button Content="View Clocked in Users (To be moved to a Manager Actions Window)" Click="ActiveUsers_Click" Height="40" Margin="0,5"/>
            <Button Content="View Users (To be moved to a Manager Actions Window)" Click="ViewUsers_Click" Height="40" Margin="0,5"/>
            <Button Content="Manager Actions" Click="ActiveUsers_Click" Height="40" Margin="0,5"/>
            <Button Content="Back to Till Window" Click="Back_Click" Height="40" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
