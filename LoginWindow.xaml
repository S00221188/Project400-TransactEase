<Window x:Class="Project400_TransactEase.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project400_TransactEase"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Sidebar -->
        <StackPanel Background="#3D3D3D" Grid.Column="0" VerticalAlignment="Stretch">
            <Image Source="Assets/TransactEaseLogo.png" Height="100" Margin="10"/>
            <TextBlock Text="TransactEase" FontSize="20" FontWeight="Bold" Foreground="#00F2FF" HorizontalAlignment="Center" Margin="10"/>
            
        <!-- Username + Password Fields (Future plans for biometric login -->
            <TextBlock Text="Username" Foreground="#00F2FF" Background="#3D3D3D" Margin="10,20,10,0"/>
            <TextBox Name="UsernameBox" Margin="10,5"/>
            
            <TextBlock Text="Password" Foreground="#00F2FF" Background="#3D3D3D" Margin="10,20,10,0"/>
            <TextBox Name="PasswordBox" Margin="10,5"/>
            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Button Name="ClockInBtn" Click="ClockInBtn_Click" Content="Clock In" Width="100" Background="Blue" Foreground="White" Margin="0,5,5,0"/>
                <Button Name="ClockOutBtn" Click="ClockOutBtn_Click" Content="Clock Out" Width="100" Background="Red" Foreground="White" Margin="5,5,0,0"/>
            </StackPanel>
            <Button Content="Login" Name="LoginBtn" Click="LoginBtn_Click" Margin="10,10" Height="35" Background="LightGreen" FontWeight="Bold"/>

        </StackPanel>
        <!-- Right Panel (Reserved for Future Development, Carousel for Venue events)-->
        <Grid Grid.Column="1" Background="#3D1F1F">
            
        </Grid>
    </Grid>
</Window>
