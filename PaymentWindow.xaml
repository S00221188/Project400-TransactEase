<Window x:Class="Project400_TransactEase.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project400_TransactEase"
        mc:Ignorable="d"
        Title="PaymentWindow" Height="720" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Total Due Display, Plans to display bill here as well -->
        <TextBlock Text="Total Due:" FontWeight="Bold"/>
        <TextBlock Name="TotalDueText" Margin="0,0,0,10" Grid.Row="1"/>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Select Payment Amount:" FontWeight="Bold" Margin="0,0,0,10"/>
            <WrapPanel Margin="0,0,0,10">
                <Button Content="€5" Width="60" Margin="5" Click="QuickPay_Click"/>
                <Button Content="€10" Width="60" Margin="5" Click="QuickPay_Click"/>
                <Button Content="€20" Width="60" Margin="5" Click="QuickPay_Click"/>
                <Button Content="€50" Width="60" Margin="5" Click="QuickPay_Click"/>
                <Button Content="€100" Width="60" Margin="5" Click="QuickPay_Click"/>
                <Button Content="Card" Width="60" Margin="5" Click="CardPay_Click"/>
            </WrapPanel>
            <!-- Custom Amount Entry to be finished for Demo -->
            <TextBlock Text="Or enter custom amount:" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox Name="CustomAmountBox" Width="120" Margin="0,5,0,10"/> 
            <!-- Number Pad -->
            <UniformGrid Rows="4" Columns="3" Margin="10">
                <Button Content="1" Click="NumberPadButton_Click" FontSize="15"/>
                <Button Content="2" Click="NumberPadButton_Click" FontSize="15"/>
                <Button Content="3" Click="NumberPadButton_Click" FontSize="15"/>
                <Button Content="4" Click="NumberPadButton_Click" FontSize="15"/>
                <Button Content="5" Click="NumberPadButton_Click" FontSize="15"/>
                <Button Content="6" Click="NumberPadButton_Click" FontSize="15"/>
                <Button Content="7" Click="NumberPadButton_Click" FontSize="15"/>
                <Button Content="8" Click="NumberPadButton_Click" FontSize="15"/>
                <Button Content="9" Click="NumberPadButton_Click" FontSize="15"/>
                <Button Content="." Click="NumberPadButton_Click" FontSize="15"/>
                <Button Content="0" Click="NumberPadButton_Click" FontSize="15"/>
                <Button Content="" Click="NumberPadButton_Click" FontSize="15"/>
                <Button Content="Clear" Click="ClearAmountButton_Click" FontSize="15"/>
                <Button Content="" Click="NumberPadButton_Click" FontSize="15"/>
                <Button Content="Del" Click="BackSpaceButton_Click" FontSize="15"/>
            </UniformGrid>

            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <Button Content="Confirm" Click="Confirm_Click" Width="150" Height="40" Background="Green" Foreground="White" Margin="5"/>
                <Button Content="Cancel" Click="Cancel_Click" Width="100" Height="40" Background="Red" Foreground="White" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
